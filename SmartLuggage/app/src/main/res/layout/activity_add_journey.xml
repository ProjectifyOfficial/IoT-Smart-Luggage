<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addJourney">

    <TextView
        android:id="@+id/dest_text_view"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/date_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set Date for Your Journey"
        tools:ignore="DuplicateIds">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/date_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/check_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/check_sweater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sweater" />

    <CheckBox
        android:id="@+id/check_coat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coat" />

    <CheckBox
        android:id="@+id/check_passport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passport" />

    <CheckBox
        android:id="@+id/check_bottle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bottle" />

    <CheckBox
        android:id="@+id/check_tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tickets" />

    <CheckBox
        android:id="@+id/check_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallet" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD" />

</LinearLayout>